@model WebApplication2.Models.JobApplication

@{
    ViewData["Title"] = "Apply for Job";
}

<h1>Apply for @ViewBag.JobTitle</h1>

<form method="post">
    <input type="hidden" asp-for="JobId" />
    <div class="form-group">
        <label asp-for="ApplicantName"></label>
        <input asp-for="ApplicantName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resume"></label>
        <textarea asp-for="Resume" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit Application</button>
</form>
